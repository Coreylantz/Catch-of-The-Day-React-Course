.order-enter
  transform: translateX(-120%)
  transition 0.3s
  max-height 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    transform: translateX(0%)
    padding 2rem 0 !important

.order-exit
  transform: translateX(0%)
  transition 0.3s
  &.order-exit-active
    transform: translateX(-120%)
    padding 0

.count-enter
  transition 0.3s
  transform: translateY(100%) scale(0)
  &.count-enter-active
    transform: translateY(0%) scale(1)

.count-exit
  transition 0.3s
  transform translateY(0%) scale(1)
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    transform translateY(-100%) scale(0)

